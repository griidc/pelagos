{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('grp-home') }}

{% endblock %}

{% block body %}
    <div class="bootstrap">
        <div class="container">

            <div class="row align-items-center my-3">
                <div class="col-lg-7">
                    <img id="home-image" class="rounded mb-4" src="{{ asset("build/images/hri-home.jpg") }}" alt="Harte Building">
                </div>
                <div class="col-lg-5">
                    <h1 class="font-weight-light">Harte Research Institute for Gulf of Mexico Studies</h1>
                    <p>The Harte Research Institute for Gulf of Mexico Studies (HRI) at Texas A&M University-Corpus Christi
                        is the only marine research institute dedicated solely to advancing the long-term sustainable use
                        and conservation of the Gulf of Mexico. Established in 2001, HRI is organized around its unique “HRI Model,”
                        encouraging interdisciplinary collaboration that integrates our science with economic, policy and
                        sociological expertise. The institute’s vision is to seek science-driven solutions for Gulf of Mexico
                        problems to ensure a Gulf that is environmentally and economically sustainable now and into the future.
                    </p>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4 mb-5">
                    <div class="card card-product">
                        <div class="card-body">
                            <div class="p-2">
                                <img class="card-img-top p-2 w-50 mx-auto d-block" src="{{ asset("build/images/icon-find.png") }}" alt="Search data icon">
                            </div>
                            <div class="p-2">
                                <h4 class="card-title text-center">
                                    <a href="{{ path('pelagos_app_ui_searchpage_default') }}" class="stretched-link" target="_blank">
                                        Search Data
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-product">
                        <div class="card-body">
                            <div class="p-2">
                                <img class="card-img-top p-2 w-50 mx-auto d-block" src="{{ asset("build/images/icon-submit.png") }}" alt="Submit data icon">
                            </div>
                            <div class="p-2">
                                <h4 class="card-title text-center">
                                    <a href="{{ path('pelagos_app_ui_datasetsubmission_info') }}" target="_blank" class="stretched-link">
                                        Submit Data
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 mb-3">
                    <div class="card card-product">
                        <div class="card-body">
                            <div class="p-2">
                                <img class="card-img-top p-2 w-50 mx-auto d-block" src="{{ asset("build/images/icon-monitoring.png") }}" alt="Monitor data icon">
                            </div>
                            <div class="p-2">
                                <h4 class="card-title text-center">
                                    <a href="{{ path('pelagos_app_ui_datasetmonitoring_default') }}#801" target="_blank" class="stretched-link">
                                        Monitor Data
                                    </a>
                                </h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <footer class="py-5 bg-dark">
            <div class="container">
                <p class="m-0 text-center text-white">Copyright &copy; HRI - GRIIDC 2022</p>
            </div>
        </footer>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
