<h2>Leadership</h2>
<div id="leadership">
    <table>
    {% if ResearchGroup.getPersonResearchGroups | length > 0 %}
        {% for PersonResearchGroup in ResearchGroup.getPersonResearchGroups | sortBy(["role.weight","person.lastName","person.firstName"]) %}
            {% if PersonResearchGroup.getRole.getWeight == 1 %}
                <tr PersonResearchGroupId="{{PersonResearchGroup.getId}}">
                    <td>
                        <b>Name:</b> <span class="displayField">{{PersonResearchGroup.getPerson.getFirstName}} {{PersonResearchGroup.getPerson.getLastName}}</span><br>
                        <b>eMail:</b> <a class="displayField" href="mailto:{{PersonResearchGroup.getPerson.getEmailAddress}}">{{PersonResearchGroup.getPerson.getEmailAddress}}</a><br>
                        <b>Title:</b> <span class="displayField">{{PersonResearchGroup.getLabel}}</span>
                    </td>
                <tr>
            {% endif %}
        {% endfor %}
    {% endif %}
    </table>
</div>
