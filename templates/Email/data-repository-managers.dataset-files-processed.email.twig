    Research Group: {{ datasetSubmission.dataset.researchGroup.name }}
    Funding Cycle: {{ datasetSubmission.dataset.researchGroup.fundingCycle.name }}
    Funding Organization: {{ datasetSubmission.dataset.researchGroup.fundingCycle.fundingOrganization.name }}
    SubmissionTimeStamp: {{ datasetSubmission.submissionTimeStamp.format('c') }}

    Files
    {% if datasetSubmission.fileset is defined and datasetSubmission.fileset is not null %}
        Number of Files: {{ datasetSubmission.fileset.numberOfFiles }}
        Total File Size:  {{ datasetSubmission.fileset.fileSize|formatBytes }}
        Files with error: {{ datasetSubmission.fileset.numberOfErroredFiles }}
    {% else %}
        N/A
    {% endif %}

    Large File Uri
    {% if datasetSubmission.largeFileUri %}
        Dataset File Path for large file: {{ datasetSubmission.largeFileUri}}
    {% else %}
        N/A
    {% endif %}

    Remotely Hosted Url
    {% if datasetSubmission.remotelyHostedUrl %}
        The following URL was provided : {{ datasetSubmission.remotelyHostedUrl }}
    {% else %}
        N/A
    {% endif %}
{% endblock %}
