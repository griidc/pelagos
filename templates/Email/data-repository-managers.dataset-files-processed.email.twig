{% block subject 'New dataset file(s)/url(s) for ' ~ datasetSubmission.dataset.udi %}

 {% block body_html %}
     New Dataset Files Submitted for {{ datasetSubmission.dataset.udi }}:<br>
     <br>
     Submitter: {{ datasetSubmission.submitter.firstName }} {{ datasetSubmission.submitter.lastName }}<br>
     UDI: {{ datasetSubmission.dataset.udi }}<br>
     Dataset Title: {{ datasetSubmission.dataset.title }}<br>
     Research Group: {{ datasetSubmission.dataset.researchGroup.name }}<br>
     Funding Cycle: {{ datasetSubmission.dataset.researchGroup.fundingCycle.name }}<br>
     Funding Organization: {{ datasetSubmission.dataset.researchGroup.fundingCycle.fundingOrganization.name }}<br>
     SubmissionTimeStamp: {{ datasetSubmission.submissionTimeStamp.format('c') }}<br>
     <h3>Files</h3>
     {% if datasetSubmission.fileset is defined and datasetSubmission.fileset is not null %}
        Number of Files: {{ datasetSubmission.fileset.numberOfFiles }} <br>
        Total File Size:  {{ datasetSubmission.fileset.fileSize|formatBytes }}<br>
        Files with error: {{ datasetSubmission.fileset.numberOfErroredFiles }}<br>
     {% else %}
         N/A<br>
     {% endif %}
     <br>
     <h3>Large File Uri</h3>
     {% if datasetSubmission.largeFileUri %}
        Dataset File Path for large file: {{ datasetSubmission.largeFileUri}}<br>
     {% else %}
         N/A<br>
     {% endif %}
     <br>
     <h3>Remotely Hosted Url</h3>
     {% if datasetSubmission.remotelyHostedUrl %}
         The following URL was provided : {{ datasetSubmission.remotelyHostedUrl }}
     {% else %}
         N/A<br>
     {% endif %}
 {% endblock%}

{% block body_text %}
    New Dataset Files/Urls Submitted for {{ datasetSubmission.dataset.udi }}:

    Submitter: {{ datasetSubmission.submitter.firstName }} {{ datasetSubmission.submitter.lastName }}
