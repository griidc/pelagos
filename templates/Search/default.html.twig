{% extends "base.html.twig" %}
{% block title %}Search{% endblock %}

{%block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('css/search.css') }}">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('build/layout.css') }}">
{%endblock stylesheets  %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="{{ asset('build/layout.js') }}"></script>
    <script type="text/javascript" src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/bootpag/1.0.7/jquery.bootpag.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/search.js') }}"></script>

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.11.1/jquery.validate.min.js"></script>
{% endblock %}


{% block body %}
    {% if query is null %}
        <div class="container-fluid header">
            <div class="row">
                <h2>
                    <img src="{{ asset('images/search-logo.png')}}">
                </h2>
                {% include 'Search/form.html.twig' %}
            </div>
        </div>
    {% else %}
        {% include 'Search/results.html.twig' %}
    {% endif %}
{% endblock %}
