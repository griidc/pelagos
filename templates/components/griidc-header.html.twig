            {% if app.user %}
                <span class="block md:ml-2 text-[0.875rem] text-gray-600 leading-[1.25]">
                    <span>Logged in as: {{ app.user.username }}</span>
                    <span class="p-2">|</span>
                    <a href="/logout" class="">Log out</a>
                </span>
            {% else %}
                <a href="/login" class="flex items-center text-gray-600">
                <span class="block md:ml-2 text-[0.875rem] leading-[1.25]">Login</span>
            </a>
