<fieldset>
    <legend>Funders</legend>
    <div id="funder-items">
        <input id="funderList" name="funderList" type="hidden" class="funders"/>
        {% for funder in form.funders %}
            <input type="hidden" id="{{funder.vars.id}}" name="{{funder.vars.full_name}}" value="{{funder.vars.value}}">
        {% endfor %}
    </div>
    <label for="funders" class="error"></label>

    <table class="tab-table">
        <tr>
            <td>
				<span class="helpSection">
					<img class="info" src="{{ asset('build/images/info32.png') }}">
					<div class="tooltiptext">
                        Please select one or multiple funders from the dropdown list. If your funder is not on the list, please add it in the Additional Funders section.
					</div>
				</span>
                <div>
                    <div>
                        <label for="funderTagBox" class="emRequired">Add Funder(s)</label>
                        <div id="funderTagBox"></div>
                    </div>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <span class="helpSection">
					<img class="info" src="{{ asset('build/images/info32.png') }}">
					<div class="tooltiptext">
                        Please add the funder for the dataset if not listed in the dropdown list above.
					</div>
				</span>

				{{ form_row(form.additionalFunders, { attr: { class: 'funders'} }) }}
            </td>
        </tr>
    </table>
</fieldset>
