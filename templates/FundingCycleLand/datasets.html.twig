<h3>Datasets</h3>

{% for researchGroup in fundingCycle.researchGroups %}
    {% for dataset in researchGroup.datasets %}
    <div class="bg-gray-50 p-4 rounded-lg mb-4 border-black shadow-lg m-5">
    <!-- authors, publishedon, file format(s), doi, udi, total filesize (if hot) -->
        <h4>{{ dataset.title }}</h4>
        Authors: {{ dataset.authors }}<br />

        {% if dataset.acceptedDate is not null %}
            Published On: {{ dataset.acceptedDate|date('M d Y H:i T', 'UTC') }}
        {% else %}
            Identified On:{{ dataset.dif.approveddate|date('M d Y H:i T', 'UTC') }}
        {% endif %}
        <br />
        Filetype(s): {{ dataset.datasetSubmission.fileTypes|join(', ') }}<br />
        {{ dataset.doi }}<br />
        UDI: {{ dataset.udi }}<br />
        Size: {{ dataset.totalFileSize }} bytes<br />
        </p>
        </div>
    {% endfor %}
{% endfor %}
