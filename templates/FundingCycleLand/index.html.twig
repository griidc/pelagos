{% extends "base.html.twig" %}
{% block title %}Funding Cycle Page{% endblock title %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('funding-cycle-land') }}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <style>
        .active {
            transition: opacity 0.5s ease-in-out;
            opacity: 1;
            height: auto;
        }
        .inactive {
            transition: opacity 0.5s ease-in-out;
            opacity: 0.5;
            height: 0;
            overflow: hidden;
        }
    </style>
{% endblock stylesheets  %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('funding-cycle-land') }}
{% endblock javascripts %}

{% block body %}
<div class="max-w-screen-xl mx-auto py-6">
    <div class="overflow-y-auto" x-data="{
        openTab: 1,
        activeClasses: 'text-white bg-blue-700',
        inactiveClasses: 'hover:text-gray-900 bg-gray-50 hover:bg-gray-100',
    }">

    <div class="md:flex">
        <ul class="flex-column space-y space-y-4 text-gray-500 md:me-4 mb-4 md:mb-0 bg-gray-50 p-2">
            <li>
                <a @click="openTab = 1" href="#" :class="openTab === 1 ? activeClasses : inactiveClasses" class="inline-flex items-center px-4 py-3 rounded-lg w-full">
                    <i class="fa-solid fa-circle-info me-2"></i>
                    Overview
                </a>
            </li>
            <li>
                <a @click="openTab = 2" href="#" :class="openTab === 2 ? activeClasses : inactiveClasses" class="inline-flex items-center px-4 py-3 rounded-lg w-full">
                    <i class="fa-solid fa-user me-2"></i>
                    People
                </a>
            </li>
            <li>
                <a @click="openTab = 3" href="#" :class="openTab === 3 ? activeClasses : inactiveClasses" class="inline-flex items-center px-4 py-3 rounded-lg w-full">
                    <i class="fa-solid fa-database me-2"></i>
                    Datasets
                </a>
            </li>
        </ul>
        <div class="p-6 text-medium rounded-lg w-full">
            <div :class="openTab === 1 ? 'active' : 'inactive'">
                <h3 class="text-lg font-bold text-gray-900">Overview</h3>
                <p class="mb-2">Overview Content</p>
            </div>
            <div :class="openTab === 2 ? 'active' : 'inactive'">
                <h3 class="text-lg font-bold text-gray-900">People</h3>
                <p class="mb-2">People Content</p>
            </div>
            <div :class="openTab === 3 ? 'active' : 'inactive'">
                <h3 class="text-lg font-bold text-gray-900">Datasets</h3>
                <p class="mb-2">Dataset Content</p>
            </div>
        </div>
    </div>

</div>
<div class="dsm-loadpanel"></div>
{% endblock %}
