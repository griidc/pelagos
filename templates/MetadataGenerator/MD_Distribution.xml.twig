{% set distPoint = dataset.datasetSubmission.distributionPoints | first %}
<gmd:MD_Distribution>
    <gmd:distributor>
        <gmd:MD_Distributor>
            <gmd:distributorContact>
                <gmd:CI_ResponsibleParty>
                    <gmd:organisationName>
                        <gco:CharacterString> {{ distPoint.dataCenter.organizationName }}</gco:CharacterString>
                    </gmd:organisationName>
                    <gmd:contactInfo>
                        <gmd:CI_Contact>
                            <gmd:phone>
                                <gmd:CI_Telephone>
                                    <gmd:voice>
                                        {% if distPoint.dataCenter.phoneNumber is empty %}
                                            <gco:CharacterString/>
                                        {% else %}
                                            <gco:CharacterString>{{ distPoint.dataCenter.phoneNumber }}</gco:CharacterString>
                                        {% endif %}
                                    </gmd:voice>
                                </gmd:CI_Telephone>
                            </gmd:phone>
                            <gmd:address>
                                <gmd:CI_Address>
                                    <gmd:deliveryPoint>
                                        {% if distPoint.dataCenter.deliveryPoint is empty %}
                                            <gco:CharacterString/>
                                        {% else %}
                                            <gco:CharacterString><![CDATA[{{ distPoint.dataCenter.deliveryPoint }}]]></gco:CharacterString>
                                        {% endif %}
                                    </gmd:deliveryPoint>
                                    <gmd:city>
                                        {% if distPoint.dataCenter.city is empty %}
                                            <gco:CharacterString/>
                                        {% else %}
                                            <gco:CharacterString>{{ distPoint.dataCenter.city }}</gco:CharacterString>
                                        {% endif %}
                                    </gmd:city>
                                    <gmd:administrativeArea>
                                        {% if distPoint.dataCenter.administrativeArea is empty %}
                                            <gco:CharacterString/>
                                        {% else %}
                                            <gco:CharacterString>{{ distPoint.dataCenter.administrativeArea }}</gco:CharacterString>
                                        {% endif %}
                                    </gmd:administrativeArea>
                                    <gmd:postalCode>
                                        {% if distPoint.dataCenter.postalCode is empty %}
                                            <gco:CharacterString/>
                                        {% else %}
                                            <gco:CharacterString>{{ distPoint.dataCenter.postalCode }}</gco:CharacterString>
                                        {% endif %}
                                    </gmd:postalCode>
                                    <gmd:country>
                                        {% if distPoint.dataCenter.country is empty %}
                                            <gco:CharacterString/>
                                        {% else %}
                                            <gco:CharacterString>{{ distPoint.dataCenter.country }}</gco:CharacterString>
                                        {% endif %}
                                    </gmd:country>
                                    <gmd:electronicMailAddress>
                                        {% if distPoint.dataCenter.emailAddress is empty %}
                                            <gco:CharacterString/>
                                        {% else %}
                                            <gco:CharacterString>{{ distPoint.dataCenter.emailAddress }}</gco:CharacterString>
                                        {% endif %}
                                    </gmd:electronicMailAddress>
                                </gmd:CI_Address>
                            </gmd:address>
                            <gmd:onlineResource>
                                <gmd:CI_OnlineResource>
                                    <gmd:linkage>
                                        <gmd:URL>{{ distPoint.dataCenter.organizationUrl }}</gmd:URL>
                                    </gmd:linkage>
                                </gmd:CI_OnlineResource>
                            </gmd:onlineResource>
                        </gmd:CI_Contact>
                    </gmd:contactInfo>
                    <gmd:role>
                        {% include "PelagosAppBundle:MetadataGenerator:CI_RoleCode.xml.twig" with {"role" : distPoint.roleCode} %}
                    </gmd:role>
                </gmd:CI_ResponsibleParty>
            </gmd:distributorContact>
            <gmd:distributorFormat>
                <gmd:MD_Format>
                    <gmd:name>
                        <gco:CharacterString>{{ dataset.datasetSubmission.distributionFormatName|default }}</gco:CharacterString>
                    </gmd:name>
                    <gmd:version gco:nilReason="inapplicable" />
                    <gmd:fileDecompressionTechnique>
                        <gco:CharacterString>{{ dataset.datasetSubmission.fileDecompressionTechnique|default }}</gco:CharacterString>
                    </gmd:fileDecompressionTechnique>
                </gmd:MD_Format>
            </gmd:distributorFormat>
            <gmd:distributorTransferOptions>
                <gmd:MD_DigitalTransferOptions>
                    {% if dataset.datasetSubmission.datasetFileSize|default is empty %}
                        <gmd:transferSize/>
                    {% else %}
                        <gmd:transferSize>
                            <gco:Real>{{ (dataset.datasetSubmission.datasetFileSize / 1000000) | round(4) }}</gco:Real>
                        </gmd:transferSize>
                    {% endif %}
                    <gmd:onLine>
                        <gmd:CI_OnlineResource>
                            <gmd:linkage>
                                <gmd:URL>{{ distPoint.distributionUrl }}</gmd:URL>
                            </gmd:linkage>
                            <gmd:protocol>
                                <gco:CharacterString>{{ distPoint.distributionUrlProtocol }}</gco:CharacterString>
                            </gmd:protocol>
                            {% if dataset.isRemotelyHosted == false %}
                                <gmd:name>
                                    <gco:CharacterString>Data Landing Page</gco:CharacterString>
                                </gmd:name>
                                <gmd:description>
                                    <gco:CharacterString>GRIIDC dataset landing page</gco:CharacterString>
                                </gmd:description>
                                <gmd:function>
                                    <gmd:CI_OnLineFunctionCode codeList="http://www.isotc211.org/2005/resources/Codelist/gmxCodelists.xml#CI_OnLineFunctionCode"
                                                               codeListValue="information" codeSpace="002">
                                        information
                                    </gmd:CI_OnLineFunctionCode>
                                </gmd:function>
                            {% elseif dataset.isRemotelyHosted == true %}
                                {% if dataset.datasetSubmission.remotelyHostedName %}
                                <gmd:name>
                                    <gco:CharacterString>
                                        {{ dataset.datasetSubmission.remotelyHostedName }}
                                    </gco:CharacterString>
                                </gmd:name>
                                {% else %}
                                <gmd:name gco:nilReason="missing"/>
                                {% endif %}
                                {%  if dataset.datasetSubmission.remotelyHostedDescription %}
                                <gmd:description>
                                    <gco:CharacterString>
                                        {{ dataset.datasetSubmission.remotelyHostedDescription }}
                                    </gco:CharacterString>
                                </gmd:description>
                                {% else %}
                                <gmd:description gco:nilReason="missing"/>
                                {% endif %}
                                {% if dataset.datasetSubmission.remotelyHostedFunction %}
                                <gmd:function>
                                {% include "PelagosAppBundle:MetadataGenerator:CI_OnLineFunctionCode.xml.twig" with {"function" : dataset.datasetSubmission.remotelyHostedFunction} %}
                                </gmd:function>
                                {% else %}
                                <gmd:function gco:nilReason="missing"/>
                                {% endif %}
                            {% endif %}
                        </gmd:CI_OnlineResource>
                    </gmd:onLine>
                </gmd:MD_DigitalTransferOptions>
            </gmd:distributorTransferOptions>
            {% if dataset.datasetSubmission.erddapUrl %}
                <gmd:distributorTransferOptions>
                    <gmd:MD_DigitalTransferOptions>
                        <gmd:onLine>
                            <gmd:CI_OnlineResource>
                                <gmd:linkage>
                                    <gmd:URL>{{ dataset.datasetSubmission.erddapUrl }}</gmd:URL>
                                </gmd:linkage>
                                <gmd:protocol>
                                    <gco:CharacterString>{{ dataset.datasetSubmission.erddapUrlProtocol  }}</gco:CharacterString>
                                </gmd:protocol>
                                <gmd:name>
                                    ERDDAP Data Subset Form
                                </gmd:name>
                                <gmd:description>
                                    ERDDAP's version of the OPeNDAP .html web page for this dataset.
                                    Specify a subset of the dataset and download the data via OPeNDAP
                                    or in many different file types.
                                </gmd:description>
                                <gmd:function>
                                    <gmd:CI_OnLineFunctionCode
                                            codeList="http://www.isotc211.org/2005/resources/Codelist/gmxCodelists.xml#CI_OnLineFunctionCode"
                                            codeListValue="download" codeSpace="001">
                                        download
                                    </gmd:CI_OnLineFunctionCode>
                                </gmd:function>
                            </gmd:CI_OnlineResource>
                        </gmd:onLine>
                    </gmd:MD_DigitalTransferOptions>
                </gmd:distributorTransferOptions>
            {% endif %}
        </gmd:MD_Distributor>
    </gmd:distributor>
</gmd:MD_Distribution>
