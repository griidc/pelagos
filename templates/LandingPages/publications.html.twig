{% for publication in publications|sortBy(['citationText']) %}
    {% if publication.doi is not empty %}
        <a href="https://doi.org/{{ publication.doi }}" target="_blank" class="block">
    {% endif %}
    <div class="publication card">
        <p>{{ publication.citationText|default }}</p>
    </div>
    {% if publication.doi is not empty %}
        </a>
    {% endif %}
{% endfor %}
