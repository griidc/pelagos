{% for researchGroup in researchGroups %}
    <div class="card">
        <a class="pagelink" href="{{ path('pelagos_app_ui_researchgroup_about', {'id': researchGroup.id}) }}" target="_blank" class="no-underline">
            <h4>{{ researchGroup.name }}</h4>
        </a>
        {% if researchGroup.description %}
            <p>
                <label>Description:</label>
                {{ researchGroup.description }}
            </p>
        {% endif %}
    </div>
{% endfor %}
