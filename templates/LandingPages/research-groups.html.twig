{% for researchGroup in researchGroups %}
    <a href="{{ path('pelagos_app_ui_researchgroup_about', {'id': researchGroup.id}) }}" target="_blank" class="no-underline">
        <div class="card">
            <h4>{{ researchGroup.name }}</h4>
            <p>
                <label>Project Director:</label>
                {% for projectDirector in researchGroup.getProjectDirectors %}
                    {{ projectDirector.lastName }}, {{ projectDirector.firstName }}
                {% endfor %}
            </p>
            <p>
                <label>Description:</label>
                {{ researchGroup.description }}
            </p>
        </div>
    </a>
{% endfor %}
