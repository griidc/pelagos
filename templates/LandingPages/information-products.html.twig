    {% for informationProduct in informationProducts %}
        <a href="{{ path('pelagos_app_ui_info_product_landing', { 'id': informationProduct.id }) }}" target="_blank" class="block">
            <div class="card">
                <div>
                    <span class="badge badge-itemtype">Information Product</span>
                    {% for productType in informationProduct.productTypeDescriptors %}
                        <span class="badge badge-available mr-1">{{ productType.description }}</span>
                    {% endfor %}
                    {% for digitalResourceType in informationProduct.digitalResourceTypeDescriptors %}
                        <span class="badge badge-submitted mr-1">{{ digitalResourceType.description }}</span>
                    {% endfor %}
                </div>
                <p class="mb-2 text-2xl">{{ informationProduct.title }}</p>
                <div class="flex justify-between">
                    <div class="text-left">
                        Creators: {{ informationProduct.creators }} <br />
                        Publisher: {{ informationProduct.publisher }} <br />
                    </div>
                    {% if informationProduct.remoteUri|default %}
                        <div class="text-right">{{ informationProduct.remoteUriHostname }}</div>
                    {% endif %}
                    {% if informationProduct.file %}
                        <div class="text-right min-w-fit">{{ informationProduct.file.fileExtension }} ({{ informationProduct.file.fileSize|default(0)|formatBytes }})</div>
                    {% endif %}
                </div>
            </div>
        </a>
    {% endfor %}
