{% extends 'base.html.twig' %}
{% block title %}{{ dataset.udi }}{% endblock %}

{% block head %}
    {{ parent() }}

    {% if dataset.isAvailable %}
        {% include 'Dataland/metadata.markup.twig' %}
    {% else %}
        <meta name="robots" content="noindex"/>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('data-land') }}
    {{ parent() }}

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>

    <style>
        .leaflet-control-attribution {
            max-height: 3rem;
            overflow-x: auto;
        }

        .leaflet-control-zoom-in span,
        .leaflet-control-zoom-out span {
            color: white;
        }

        .leaflet-control-zoom-in:focus span,
        .leaflet-control-zoom-in:hover span,
        .leaflet-control-zoom-out:focus span,
        .leaflet-control-zoom-out:hover span {
            color: black;
        }

        .leaflet-bar {
            background-color: rgba(0, 60, 136, 0.5);
        }

        .leaflet-bar a:hover,
        .leaflet-bar a:focus {
	        background-color: rgba(0, 60, 136, 0.5);
	    }
    </style>
{% endblock stylesheets %}

{% block body %}
    <div class="bootstrap">
        <div class="container">
            <div class="main pb-5">
                <div class="title w-75 float-left px-3">
                    <div class="pt-3">
                        {% include 'Dataland/v2/status-badge.html.twig' %}
                        <h2> {{ dataset.title }} </h2>
                    </div>
                    {% if dataset.datasetsubmissionstatus != constant("App\\Entity\\DatasetSubmission::STATUS_UNSUBMITTED") %}
                        <div class="d-flex justify-content-between py-2">
                            <div>
                                <div>
                                    <strong>Authors:</strong> {{ dataset.datasetSubmission.authors|default }}
                                </div>
                                <div>
                                {% if dataset.acceptedDate is not null %}
                                    <strong>Published On:</strong> {{ dataset.acceptedDate|date('M d Y H:i T', 'UTC') }}
                                {% else %}
                                    <strong>Identified On:</strong> {{ dataset.dif.approveddate|date('M d Y H:i T', 'UTC') }}
                                {% endif %}
                                </div>
                            </div>
                            <div>
                                <div>
                                    <div>
                                        <strong>DOI:</strong>
                                        {% if dataset.doi %}
                                            https://doi.org/{{ dataset.doi.doi }}
                                        {% endif %}
                                    </div>
                    {% elseif dataset.dif.status == constant("App\\Entity\\DIF::STATUS_APPROVED") %}
                        <div class="d-flex justify-content-between py-2">
                            <div>
                                <div></div>
                                <div>
                                    <strong>Identified On:</strong> {{ dataset.dif.approveddate|date('M d Y H:i T', 'UTC') }}
                                </div>
                            </div>
                            <div>
                                <div>
                                    <div></div>
                    {% else %}
                        <div class="d-flex justify-content-between py-2">
                            <div>
                                <div></div>
                                <div></div>
                            </div>
                            <div>
                                <div>
                                    <div></div>
                    {% endif %}
                                    <div>
                                        <strong>UDI:</strong> {{ dataset.udi }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    <hr>
                </div>
                <div class="sidebar w-25 float-right px-3">
                    {% include 'Dataland/v2/detail-cards.html.twig' %}
                </div>
                <div class="other-metadata w-75 float-left px-3">
                    <div class="py-2">
                        <h6><strong>Abstract:</strong></h6>
                        <p class="pre-line-white-space clamped">
                            {{ dataset.abstract }}
                        </p>
                    </div>
                    <hr>
                    {# {% if dataset.datasetSubmission.spatialExtent|default %} #}
                        <div class="py-2">
                            <div id="map" style="width: 100%;height:480px;"></div>
                        </div>
                        <hr>
                    {# {% endif %} #}
                    {% if dataset.datasetSubmissionStatus == constant('App\\Entity\\DatasetSubmission::STATUS_COMPLETE') %}
                    <div class="py-2">
                        <h6><strong>Suggested Citation:</strong></h6>
                        <p>
                            {{ dataset.citation }}
                        </p>
                    </div>
                    {% endif %}
                    {% include 'Dataland/v2/publications.html.twig' %}
                    <hr>
                    {% if dataset.datasetSubmission and dataset.datasetSubmission.purpose %}
                    <div class="py-2">
                        <h6><strong>Purpose:</strong></h6>
                        <p class="clamped">
                            {{ dataset.datasetSubmission.purpose|default }}
                        </p>
                    </div>
                    {% endif %}
                    {% include 'Dataland/v2/supplemental-info.html.twig' %}
                    {% include 'Dataland/v2/file-manager.html.twig' %}
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <!-- Make sure you put this AFTER Leaflet's CSS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

    <!-- Load Esri Leaflet from CDN -->
    <script src="https://unpkg.com/esri-leaflet@3.0.14/dist/esri-leaflet.js"></script>

    <!-- Load Esri Leaflet Vector from CDN -->
    <script src="https://unpkg.com/esri-leaflet-vector@4.2.7/dist/esri-leaflet-vector.js" crossorigin=""></script>

    <script defer type="text/javascript">
        const esri_api_key = "{{ esri_api_key }}";
        const GRIIDCStyle = {
            "color": "orange",
            "weight": 4,
            "opacity": 1,
            "fillOpacity": 0.15,
        };
        const map = L.map('map', {
            preferCanvas: true,
            minZoom: 3,
            maxZoom: 14,
            attributionControl: true,
            worldCopyJump: true,
        });
        const basemapEnum = "ArcGIS:Imagery";
        L.esri.Vector.vectorBasemapLayer(basemapEnum, {
            apiKey: esri_api_key
        }).addTo(map)
        const geoQueryLayer = L.featureGroup().addTo(map);

        const url = `${Routing.generate('pelagos_app_ui_dataland_get_json')}/{{ dataset.id }}`;
        const response = fetch(url).then(response => response.json()).then(response => {
            const geojsonMarkerOptions = {
                radius: 12,
                fill: false,
                weight: 4,
                opacity: 1,
            };
            const geojsonLayer=L.geoJson(response, {
                pointToLayer: function (feature, latlng) {
                    return L.circleMarker(latlng, geojsonMarkerOptions);
                },
                style: GRIIDCStyle,
                onEachFeature: function(feature, layer) {
                    layer.bindTooltip(feature.properties.name.toString()),
                    {permanent: true, className: 'label'};
                }
            }).addTo(map);
            const bounds = geojsonLayer.getBounds();
            map.fitBounds(bounds, {padding: [20, 20]});
        })
    </script>

    {{ encore_entry_script_tags('data-land') }}
{% endblock %}
