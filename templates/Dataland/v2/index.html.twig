{% extends 'base.html.twig' %}
{% block title %}{{ dataset.udi }}{% endblock %}

{% block head %}
    {{ parent() }}

    {% if dataset.isAvailable %}
        {% include 'Dataland/metadata.markup.twig' %}
    {% else %}
        <meta name="robots" content="noindex"/>
    {% endif %}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('data-land') }}
    {{ parent() }}
{% endblock stylesheets %}

{% block body %}
    <div class="bootstrap">
        <div class="container">
            <div class="main pb-5">
                <div class="title w-75 float-left px-3">
                    <div class="pt-3">
                        {% include 'Dataland/v2/status-badge.html.twig' %}
                        <h2> {{ dataset.title }} </h2>
                    </div>
                    <div class="d-flex justify-content-between py-2">
                        <div>
                            <div>
                                <strong>Authors:</strong> {{ dataset.datasetSubmission.authors|default }}
                            </div>
                            <div>
                                <strong>Published on </strong> {{ dataset.acceptedDate|date('M d Y H:i T', 'UTC') }}
                            </div>
                        </div>
                        <div>
                            <div>
                                <div>
                                    <strong>DOI:</strong> {{ dataset.doi.doi|default }}
                                </div>
                                <div>
                                    <strong>UDI:</strong> {{ dataset.udi }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="sidebar w-25 float-right px-3">
                    {% include 'Dataland/v2/detail-cards.html.twig' %}
                </div>
                <div class="other-metadata w-75 float-left px-3">
                    <div class="py-2">
                        <h6><strong>Abstract:</strong></h6>
                        <p class="pre-line-white-space">
                            {{ dataset.abstract }}
                        </p>
                    </div>
                    <hr>
                    {% if dataset.datasetSubmission.spatialExtent|default %}
                        <div class="py-2">
                            <div id="dlolmap" style="width: 100%;height:480px;"
                                 wkt="{{wkt|default}}"
                                 udi="{{dataset.udi}}"
                                 description= {{ (dataset.datasetStatus == constant('App\\Entity\\Dataset::DATASET_STATUS_ACCEPTED')) ? dataset.datasetSubmission.spatialExtentDescription : "" }}
                                 labimage="{{ asset('build/images/labonly.png') }}">
                            </div>
                        </div>
                        <hr>
                    {% endif %}
                    {% if dataset.datasetSubmissionStatus == constant('App\\Entity\\DatasetSubmission::STATUS_COMPLETE') %}
                    <div class="py-2">
                        <h6><strong>Suggested Citation:</strong></h6>
                        <p>
                            {{ dataset.citation }}
                        </p>
                    </div>
                    <hr>
                    {% endif %}
                    {% if dataset.datasetSubmission and dataset.datasetSubmission.purpose %}
                    <div class="py-2">
                        <h6><strong>Purpose:</strong></h6>
                        <p>
                            {{ dataset.datasetSubmission.purpose|default }}
                        </p>
                    </div>
                    {% endif %}
                    {% include 'Dataland/v2/supplemental-info.html.twig' %}
                    {% include 'Dataland/v2/publications.html.twig' %}
                    {% include 'Dataland/v2/file-manager.html.twig' %}
                </div>
            </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="altDataAccessHelp" tabindex="-1" role="dialog" aria-labelledby="altDataAccessHelpTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="altDataAccessHelpTitle">Alternative Data Access Methods</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>
                                Some GRIIDC datasets have been made available via alternative means.
                                These methods are provided as a convenience to the user. These methods
                                may differ in format or organization from the originally submitted dataset files.
                            </p>
                            <ul>
                                <li><strong>NCEI</strong> - This dataset has been archived with NCEI. Note that this dataset may
                                    be part of a larger NCEI data package, e.g. one NCEI data package may consist
                                    of multiple GRIIDC datasets.
                                </li>
                                &nbsp;
                                <li>
                                    <strong>ERDDAP</strong> - This dataset is also available via the GRIIDC ERDDAP instance.
                                    ERDDAP is a data server that provides a simple, consistent way to download
                                    subsets of scientific datasets in common file formats and make graphs and maps.
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/openlayers/2.13.1/OpenLayers.js"></script>
    <script type="text/javascript" src="//maps.google.com/maps/api/js?v=3&key={{ google_maps_api_key }}"></script>
    <script type="text/javascript" src="{{ asset('build/js/geoviz.js') }}"></script>

    {{ encore_entry_script_tags('data-land') }}
{% endblock %}
