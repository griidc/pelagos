# This file is a "template" of what your parameters.yml file should look like
# Set parameters here that may be different on each deployment target of the app, e.g. development, staging, production.
# http://symfony.com/doc/current/best_practices/configuration.html#infrastructure-related-configuration
parameters:
    anonymous_ftp_user: anonymous
    anonymous_ftp_pass: user@domain.tld
    hostname: ~
    # A unique name for this Pelagos instance
    pelagos_name: ~

    # A unique name for this Search tool index
    search_tool_index: ~

    database_host:     127.0.0.1
    database_port:     5432
    database_name:     postgres
    database_user:     postgres
    database_password: ~
    # You should uncomment this if you want use pdo_sqlite
    # database_path: "%kernel.root_dir%/data.db3"

    mailer_transport:  sendmail
    mailer_host:       ~
    mailer_user:       ~
    mailer_password:   ~
    mailer_from_addr:  ~
    mailer_from_name:  ~
    # Exim only allows 10 messages per connection by default
    mailer_antiflood_threshold: 10

    # MDAPP Parameter - logfile l(must be read/writable by apache via facl)
    mdapp_logfile: ~

    ldap_host: localhost
    ldap_bind_dn: cn=ldapadmin,dc=griidc,dc=org
    ldap_bind_pw: ~
    ldap_people_ou: ou=members,ou=people,dc=griidc,dc=org

    # The maximum age allowed for account passwords (as an ISO 8601 duration), 0 for no expiration.
    account_password_max_age: P180D
    # When to warn account holders of soon to expire passwords (as ISO 8601 durations)
    account_password_expiration_warn: [P7D, P1D]
    # If to check for 24 hour change and password already used.
    account_less_strict_password_rules: false

    rabbit_mq_host: localhost
    rabbit_mq_port: 5672
    rabbit_mq_user: pelagos
    rabbit_mq_pass: pelagos

    data_store_directory:    /san/data/store
    data_download_directory: /san/data/download
    homedir_prefix:          /san/home

    # A secret key that's used to generate certain security-related tokens
    secret:            ThisTokenIsNotSoSecretChangeIt

    # Parameters for POSIX account generation
    posix_starting_uid: 10000
    posix_gid: 1001

    # The POSIX user that will own files and directories in the data store.
    data_store_owner: pelagos
    # The POSIX group for files and directories in the data store.
    data_store_group: pelagos
    # The POSIX group that contains users that can browse all of the data download directory.
    data_download_browser_group: GRIIDC
    # The POSIX user the web server runs under.
    web_server_user: apache

    # Parameters EZID DOI API
    doi_api_user_name: apitest
    doi_api_password : apitest
    doi_api_shoulder : doi:10.5072/FK2

    # Base URL for an issue tracking system use to track datasets (without trailing /).
    # The issue tracking ticket identifier will be appended to this URL.
    issue_tracking_base_url: ~

    # Google OAuth client id and secret used by HWIOAuthBundle.
    google_oauth_client_id: 'someclientid'
    google_oauth_client_secret: 'someclientsecret'

    download_base_directory: /san/home/http/download
    download_base_url: ~

    google_maps_api_key: ~
    google_analytics_id: ~

    # Maintenance Mode Filename
    maintenance_mode_filename: '%kernel.root_dir%/../var/maintenance.ini'

    # Read-only parameters
    pelagos_readonly_mode: false
    pelagos_readonly_message: >
        The system is currently running in read-only mode.
        Although data cannot be accepted at this time
        nor any changes be made to it, you may still search, monitor
        and download data. Please contact griidc@gomri.org for any
        questions on concerns. We apologize for any inconvenience this
        may be causing and will return to normal operating mode soon.
